<div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg p-6 mt-10">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Employee</h1>

  <%= form_with(model: @user, url: admin_user_path(@user), local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

     <div>
      <%= f.label :role, "Assign To", class: "block font-medium mb-1" %>
      <%= f.select :role, User.roles.keys.map { |k| [k.titleize, k] }, { prompt: "Select Status" }, class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex justify-between items-center">
      <%= link_to "Back", admin_users_path, class: "px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600" %>
      <%= f.submit "Update Employee", class: "px-6 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
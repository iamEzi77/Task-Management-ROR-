<div class="max-w-5xl mx-auto py-8">
  <h1 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">
    Manage Employees
  </h1>

      <div class="flex justify-end mb-4 space-x-4">
        <%= link_to "New Employee", new_admin_user_path,
          class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition duration-200" %>
      </div>

  <div class="overflow-x-auto bg-white rounded-xl shadow">
    <table class="min-w-full text-sm text-left text-gray-700">
      <thead class="bg-gray-100 text-gray-600 uppercase text-xs font-semibold">
        <tr>
          <th class="px-6 py-3">Name</th>
          <th class="px-6 py-3">Email</th>
          <th class="px-6 py-3">Role</th>
          <th class="px-6 py-3 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="border-b hover:bg-gray-50 transition">
            <td class="px-6 py-3 font-medium"><%= user.name %></td>
            <td class="px-6 py-3"><%= user.email %></td>
            <td class="px-6 py-3"><%= user.role %></td>
            <td class="px-6 py-3 text-center space-x-2">
              <%= link_to "Edit", edit_admin_user_path(user),
                class: "inline-block px-3 py-1 text-sm font-medium text-white bg-green-500 rounded-md shadow hover:bg-green-600 transition" %>
              
             <%= link_to "Delete", 
            admin_user_path(user),
            data: { turbo_method: :delete, confirm: "Are you sure?" },
            class: "inline-block px-3 py-1 text-sm font-medium text-white bg-red-500 rounded-md shadow hover:bg-red-600 transition" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
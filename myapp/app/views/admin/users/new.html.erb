<div class="max-w-lg mx-auto">
  <div class="bg-white shadow-lg rounded-2xl p-8 border border-gray-200">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">New Employee</h1>

    <%= form_with(model: @user, url: admin_users_path, local: true, class: "space-y-5") do |f| %>
      
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :role, "Assign To", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :role, User.roles.keys.map { |k| [k.titleize, k] }, { prompt: "Select Role" }, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300 focus:outline-none" %>
      </div>
      
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300 focus:outline-none" %>
      </div>

      <div class="flex justify-between items-center pt-4">
        <%= link_to "Back", admin_users_path, class: "px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition" %>
        <%= f.submit "Create Employee", class: "px-6 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition" %>
      </div>
    <% end %>
  </div>
</div>

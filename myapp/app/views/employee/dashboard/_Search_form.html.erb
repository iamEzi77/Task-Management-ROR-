<%= form_with url: employee_dashboard_index_path, method: :get, local: true, class: "bg-white shadow-md rounded-lg p-6 mb-6" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-6 gap-4 items-end">

    <div>
      <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, [["Completed", "completed"], ["Pending", "pending"]],
          { include_blank: "All" },
          class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :priority_level, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :priority_level, [["High", "high"], ["Medium", "medium"], ["Low", "low"]],
          { include_blank: "All" },
          class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :category, value: params[:category], class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :start_date, "Due Date From", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :start_date, value: params[:start_date], class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :end_date, "Due Date To", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :end_date, value: params[:end_date], class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="flex space-x-2">
      <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded shadow hover:bg-blue-700" %>
      <%= link_to "Reset", employee_dashboard_index_path,
          class: "px-4 py-2 bg-gray-200 text-gray-700 rounded shadow hover:bg-gray-300" %>
    </div>

  </div>
<% end %>

<div class="flex min-h-screen bg-gray-100">
  <aside class="w-64 bg-gray-800 text-white flex flex-col">
    <div class="p-6 text-2xl font-bold border-b border-gray-700">
      Employee Dashboard
    </div>
    <nav class="flex-1 p-4 space-y-4">
      <%= link_to "Dashboard", employee_dashboard_index_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
      <%= link_to "Create Task", new_project_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
    </nav>
  </aside>

  <main class="flex-1 p-6">
    <%= render "Search_form" %>

    <% if @projects.any? %>
      <div class="mt-6 space-y-4">
        <% @projects.each do |project| %>
          <div class="p-4 bg-white shadow rounded">
            <h2 class="text-xl font-semibold text-gray-800"><%= project.title %></h2>
            <p class="text-gray-600"><%= project.description.truncate(100) %></p>
            <p class="text-sm text-gray-500">
              Due: <%= project.due_date.present? ? project.due_date.strftime("%b %d, %Y") : "N/A" %> |
              Priority: <%= project.priority_level.titleize %> |
              Status: <%= project.status.titleize %>
            </p>
            
            <div class="mt-3">
              <%= link_to "Show", project_path(project), class: "inline-block px-4 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="mt-6 text-gray-600">No projects assigned to you.</p>
    <% end %>
  </main>
</div>

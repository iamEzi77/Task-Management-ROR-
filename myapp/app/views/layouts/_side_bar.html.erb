
<aside class="w-64 bg-gray-800 text-white flex flex-col">
  <div class="p-6 text-2xl font-bold border-b border-gray-700">
    <%= current_user.admin? ? "Admin Dashboard" : "Employee Dashboard" %>
  </div>

  <nav class="flex-1 p-4 space-y-4">
    <% if current_user.admin? %>
      <%= link_to "Dashboard", admin_dashboard_index_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
      <%= link_to "Projects", projects_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
      <%= link_to "Create Project", new_project_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
      <%= link_to "Account Management", admin_users_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
      <%= link_to "Report",  admin_all_employees_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>

    <% else %>
      <%= link_to "Dashboard", employee_dashboard_index_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
      <%= link_to "Create Project", new_project_path, class: "block px-4 py-2 rounded-lg hover:bg-gray-700 transition" %>
    <% end %>
  </nav>
</aside>
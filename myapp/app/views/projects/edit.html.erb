<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8 mt-8">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Edit Project</h1>

  <%= form_with(model: @project, url: project_path(@project), local: true, class: "space-y-6") do |f| %>

    <% if @project.errors.any? %>
      <div class="p-4 mb-6 text-red-800 bg-red-100 border border-red-300 rounded-lg">
        <h2 class="font-semibold mb-2">
          <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
        </h2>
        <ul class="list-disc list-inside space-y-1">
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.text_field :title, class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :due_date, class: "block text-sm font-semibold text-gray-700" %>
        <%= f.date_field :due_date, class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= f.label :priority_level, class: "block text-sm font-semibold text-gray-700" %>
        <%= f.select :priority_level,
              Project.priority_levels.keys.map { |p| [p.humanize, p] },
              { selected: @project.priority_level },
              class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
      </div>
    </div>

    <div>
      <%= f.label :category, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.text_field :category, class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= f.label :user_id, "Assigned To", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.select :user_id, options_from_collection_for_select(@employees, :id, :name, @project.user_id), { prompt: "Select Employee" }, class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>


    <div>
      <%= f.label :status, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.select :status,
              Project.statuses.keys.map { |s| [s.humanize, s] },
              { selected: @project.status },
              class: "w-full border rounded px-3 py-2 focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex items-center justify-between pt-6">
      <% if current_user.admin? %>
            <%= link_to "Back", admin_dashboard_index_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
        <% elsif current_user.employee? %>
            <%= link_to "Back", employee_dashboard_index_path, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
        <% end %>
      <%= f.submit "Update Project", 
          class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>

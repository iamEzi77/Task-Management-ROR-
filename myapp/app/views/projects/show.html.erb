<%= link_to "Back", (current_user.admin? ? admin_dashboard_index_path : employee_dashboard_index_path),
      class: "inline-block px-5 py-2 bg-gray-500 text-white font-semibold rounded-lg shadow hover:bg-gray-600 transition-colors duration-200" %>

<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8 mt-8">

  <h1 class="text-3xl font-bold mb-6 text-gray-800"><%= @project.title %></h1>

  <p class="text-gray-600 mb-6"><%= @project.description.presence || "No description provided." %></p>

  <div class="space-y-4">
    <p>
      <span class="font-semibold text-gray-700">Due Date:</span>
      <%= @project.due_date.present? ? @project.due_date.strftime("%B %d, %Y") : "Not set" %>
    </p>

    <p>
    <strong>Priority:</strong> <%= priority_badge(@project.priority_level) %>
    </p>

    <p>
      <span class="font-semibold text-gray-700">Category:</span>
      <%= @project.category || "Uncategorized" %>
    </p>

    <p>
    <strong>Status:</strong> <%= status_badge(@project.status) %>
    </p>
  </div>

  <div class="mt-8 flex space-x-4">
    <%= link_to "Edit", edit_project_path(@project),
      class: "inline-block px-5 py-2 bg-yellow-500 text-white font-semibold rounded-lg shadow hover:bg-yellow-600 transition-colors duration-200" %>

    <%= link_to "Delete", project_path(@project),
      data: { turbo_method: :delete, confirm: "Are you sure?" },
      class: "inline-block px-5 py-2 bg-red-500 text-white font-semibold rounded-lg shadow hover:bg-red-600 transition-colors duration-200" %>
  </div>
</div>
